#!/usr/bin/env zsh

local default_browser=$(default-browser)

case $(_os) in
  macos)
    case $default_browser in
      *chrome) open -a "/Applications/Google Chrome.app" $@ ;;
      *firefox) open -a "/Applications/Firefox.app" $@ ;;
      *safari) open -a "/Applications/Safari.app" $@ ;;
    esac
    ;;
  linux-*)
    xdg-open $@
    ;;
esac
