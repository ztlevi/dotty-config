#!/usr/bin/env zsh

# menu (dmenu, rofi, fzf, etc.)
# For dmenu: dmenu -i -p Bookmark
menu_cmd="fzf"
menu_cmd_options="--ansi"

# browser
browser_cmd='launch-browser'

if [[ -z "$1" ]]; then
  chrome_user=Default
else
  chrome_user="Profile $1"
fi
if [ "$(uname)" = "Darwin" ]; then
  bookmarks_path="${HOME}/Library/Application Support/Google/Chrome/${chrome_user}/Bookmarks"
else
  bookmarks_path=$XDG_CONFIG_HOME/google-chrome/${chrome_user}/Bookmarks
fi

jq_script='
        def ancestors: while(. | length >= 2; del(.[-1,-2]));
        . as $in | paths(.url?) as $key | $in | getpath($key) | {name,url, path: [$key[0:-2] | ancestors as $a | $in | getpath($a) | .name?] | reverse | join("/") } | .path + "/" + .name + "\t" + .url'

jq -r $jq_script <"$bookmarks_path" |
  sed -E $'s/(.*)\t(.*)/\\1\t\x1b[36m\\2\x1b[m/g' |
  $menu_cmd $menu_cmd_options |
  cut -d$'\t' -f2 |
  xargs $browser_cmd
